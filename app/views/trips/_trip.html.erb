<li id="trip-<%= trip.id %>">
  <%= link_to gravatar_for(trip.user), trip.user %>
  <span class="user"><%= link_to trip.user.name, trip.user %></span>
  <span class="destination"><%= trip.destination %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(trip.created_at) %> ago.
  </span>
</li>