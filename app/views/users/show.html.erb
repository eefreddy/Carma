<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="user_location">
        <h1>
          <%= link_to "Share Location", locations_path, class: "btn btn-lg btn-primary" %>
        </h1>
    </section>
  </aside>
</div>
